        Title="EditarItemsImpresoras3D" Height="800" Width="960" WindowStartupLocation="CenterScreen" Icon="Untitled-1.ico">
    <Grid>
        <TabControl Margin="10">


            <TabItem
                Name="TabMarca"
                Header="MARCA/MODELO">
                <Grid
                    Background="#FFE5E5E5"
                    Margin="0,0,0,2">
                    <DataGrid
                        Name="dgMarcas"
                        Margin="10,10,10,38"
                        AutoGenerateColumns="False"
                        IsReadOnly="True"
                        SelectionMode="Single"
                        ColumnWidth="*"
                        SelectionChanged="dgMarcas_SelectionChanged"
                        HorizontalScrollBarVisibility="Visible"
                        VerticalScrollBarVisibility="Visible">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Header="ID MARCA/MODELO"
                                Binding="{Binding IdMarca}"
                                MaxWidth="100" />
                            <DataGridTextColumn
                                Header="MARCA/MODELO"
                                Binding="{Binding Marca}"
                                MaxWidth="100" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <TextBox
                        Name="tbDescMarca"
                        HorizontalAlignment="Right"
                        Height="23"
                        Margin="0,0,90,10"
                        TextWrapping="Wrap"
                        Text="Marca..."
                        VerticalAlignment="Bottom"
                        Width="235" />
                    <Button
                        Name="btnAgregarMarca"
                        Content="Agregar"
                        HorizontalAlignment="Right"
                        Margin="0,0,10,10"
                        VerticalAlignment="Bottom"
                        Width="75"
                        Click="btnAgregarMarca_Click"
                        Height="23" />
                    <Button
                        x:Name="btnBorrarMarca"
                        Content="Borrar"
                        HorizontalAlignment="Left"
                        Margin="94,0,0,10"
                        VerticalAlignment="Bottom"
                        Width="75"
                        Click="btnBorrarMarca_Click"
                        Height="23" />
                    <Button
                        x:Name="btnEditarMarca"
                        Content="Editar"
                        HorizontalAlignment="Left"
                        Margin="174,0,0,10"
                        VerticalAlignment="Bottom"
                        Width="75"
                        Click="btnEditarMarca_Click"
                        Height="23" />
                    <Button
                        x:Name="btnCargarMarca"
                        Content="Cargar Marcas"
                        HorizontalAlignment="Left"
                        Margin="10,0,0,10"
                        VerticalAlignment="Bottom"
                        Width="79"
                        Click="btnCargarMarcas_Click"
                        Height="23" />
                </Grid>
            </TabItem>


